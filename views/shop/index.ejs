<%- include('../partials/header.ejs'); -%>
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <div id="success" class="alert alert-success <%if(noMessages)%> hidden">
        <%= successMessage %>
      </div>
    </div>
  </div>
  <div class="row">
  <% products.forEach(function(product) { %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= product.imagePath %>" alt="tshirt3" class="img-responsive">
            <div class="caption">
            <h3><%= product.title %></h3>
            <p class="description"><%= product.description %></p>
            <div class="clearfix">
              <div class="price">
                shs<%= product.price %>
              </div>
              <a href="/add-to-cart/<%= product._id %>" class="btn btn-success pull-right" role="button">Add to Cart</a>
            </div>
          </div>
        </div>
      </div>
  <% }); %>
  </div>
    <%- include('../partials/footer.ejs'); -%>
